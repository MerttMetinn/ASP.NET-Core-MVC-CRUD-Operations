@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = student.Id })">Edit</a> |
                    <a href="@Url.Action("Details", "Students", new { id = student.Id })">Details</a> |
                    <a href="@Url.Action("Delete", "Students", new { id = student.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>